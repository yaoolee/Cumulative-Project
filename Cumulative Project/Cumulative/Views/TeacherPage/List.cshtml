@model List<Cumulative_1.Models.Teacher>

@{
    ViewData["Title"] = "Teachers List";
}

<h2>Teachers List</h2>

<form method="get" asp-action="List">
    <input type="text" name="SearchKey" placeholder="Search by name..." />
    <button type="submit">Search</button>
</form>
<a href="/TeacherPage/New" class="btn btn-primary">Add New Teacher</a>
<table class="custom-table">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Employee Number</th>
            <th>Hire Date</th>
            <th>Salary</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.TeacherId</td>
                <td>@teacher.TeacherFName</td>
                <td>@teacher.TeacherLName</td>
                <td>@teacher.EmployeeNumber</td>
                <td>@(teacher.HireDate?.ToShortDateString() ?? "N/A")</td>
                <td>@(teacher.Salary?.ToString("C") ?? "N/A")</td>
                <td>
                    <a asp-action="Show" asp-route-id="@teacher.TeacherId" style="text-decoration: none;">Details</a> |
                    <a asp-action="DeleteConfirm" asp-route-id="@teacher.TeacherId" style="text-decoration: none;">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


